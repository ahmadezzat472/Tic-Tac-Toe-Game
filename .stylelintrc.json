{
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-idiomatic-order",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "node_modules/**",
      "dist/**"
    ],
    "rules": {
      "scss/comment-no-empty": null,
      "order/properties-alphabetical-order": null
    }
}